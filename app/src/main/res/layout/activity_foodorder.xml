<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELBISSOP RESORT"
        android:textSize="22dp"
        android:textColor="#000000"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no:40, Nagappa nagar"
        android:textSize="15dp"
        android:typeface="serif"
        android:textStyle="italic"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chrompet,Chennai."
        android:textSize="15dp"
        android:typeface="serif"
        android:textStyle="italic"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOD ORDER"
        android:textSize="18dp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"/>
    <View
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_width="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table no:"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/fbillno"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oredr Date"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/fbilldate"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/ftableno"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Time"
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17dp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:id="@+id/fbilltime"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_width="wrap_content"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="17dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textSize="17dp"
            android:textColor="#000000"
            android:textStyle="normal"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_width="wrap_content"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10sp"
        android:divider="#d4d2d2"
        android:id="@+id/order_list"/>
    <View
        android:layout_height="2dip"
        android:background="#000000"
        android:layout_width="wrap_content"/>



    </LinearLayout>